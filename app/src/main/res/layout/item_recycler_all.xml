<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/lightGray" />


    <ImageView
        android:id="@+id/img_home_title_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/home_maintain_img" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/darktGray" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_home_one"
            android:layout_width="0dp"
            android:layout_height="164dp"
            android:layout_weight="1">


            <TextView
                android:id="@+id/tv_home_title_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/textBlack"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_home_content_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_home_title_one"
                android:layout_alignStart="@+id/tv_home_title_one"
                android:layout_below="@+id/tv_home_title_one"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/textBlack"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/img_home_img_one"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_home_content_one"
                android:layout_centerInParent="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/darktGray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="164dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_home_two"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_home_title_two"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/textBlack"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_home_content_two"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_home_title_two"
                    android:layout_alignStart="@+id/tv_home_title_two"
                    android:layout_below="@+id/tv_home_title_two"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/textBlack"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/img_home_img_two"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/darktGray" />

            <RelativeLayout
                android:id="@+id/layout_home_three"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_home_title_three"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/textBlack"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_home_content_three"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_home_title_three"
                    android:layout_alignStart="@+id/tv_home_title_three"
                    android:layout_below="@+id/tv_home_title_three"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/textBlack"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/img_home_img_three"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/darktGray" />

</LinearLayout>